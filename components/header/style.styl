header
  background:rgba(255,255,255,0.9)
  border-bottom:1px solid black
  position:fixed
  top:0px
  width:100%
  z-index:100
  
  > .header
    text-align:center
    padding:20px
    > nav
      display:inline-block
      margin:0 auto
      
      span
        cursor:pointer
        margin:2.5px
        padding:8px 12px
        background:rgba(0, 0, 0, 0.9)
        border-radius:6px
        font-weight:100;
        font-size:14px
        color:white
        
        &.active, &.hover
          &:first-child
            background:$blue
          &:nth-child(2)
            background:$green
          &:nth-child(3)
            background:$orange
          &:last-child
            background:$red
        @media all and (max-width:350px)
          font-size:10px
          
