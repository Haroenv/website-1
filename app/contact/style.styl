.contact
  overflow:hidden
  padding-bottom:200px
  height:100%
  > .bg-image
    width:100%
    height:150px
    background:url('../images/bg4.jpg')
    background-size:contain
    
  
  > section
    width:100%
    background:white
    box-sizing:border-box
    padding:50px 30px 100px
    
    > article 
      padding:0px
    
    > form
      $wrapper()
      
      &.locked
        .submit-button
          border:0px
          background: rgba($blue, 0.3) !important
          
      .row
        padding-top:20px
        
      label
        font-size:18px
        span
          color: $red
      
      .error
        font-size:15px
        color: $red
        float:right
          
      input, textarea
        box-sizing:border-box
        padding:5px
        margin:0px
        margin-top:5px
        width:100%
        min-width:100%
        border: 1px solid $blue
        
        &.invalid
          border: 1px solid $red
          
      
      .submit-button
        margin-top:20px
        $submit()
      

   