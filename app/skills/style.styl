.skills
  overflow:hidden
  > .bg-image
    width:100%
    height:150px
    background:url('../images/bg2.jpg')
    background-size:100%
    
  > section
    width:100%
    background:white
    box-sizing:border-box
    padding:45px 30px 30px
    
    > article 
      padding:0px
      
      &:first-child
        padding-bottom:20px
        
      &:nth-child(1n+2)
        padding:5px 20px 20px
        margin-bottom:20px
        border: 5px solid $blue

      &:nth-child(3n)        
        border: 5px solid $green
        
      &:nth-child(4n)        
        border: 5px solid $orange
      
      @media all and (max-width:600px)
        &:not(:first-child)
          max-height:400px
          overflow:hidden
          position:relative
          >.wrapper > p
            display:none
          &:after
            content:' '
            position: absolute
            background: linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 90%)
            width:100%
            height:85% 
            bottom:0px 
            left:0
      
      

      @media all and (max-width:600px)
        &:not(:first-child)
          max-height:320px
            
      > .wrapper
        > .logos
          position:relative
          text-align:center            
          
          > a
            cursor:pointer
            margin: 8px 6px
            min-width:90px
            height:90px
            box-sizing:border-box
            display: inline-block
            vertical-align:middle
            
            &:nth-child(4n-3)
              border: 3px solid $blue
              background: rgba($blue, 0.1)
              &:hover
                background: rgba($blue, 0.3)    

            &:nth-child(4n-2)        
              border: 3px solid $green
              background: rgba($green, 0.1)
              &:hover
                background: rgba($green, 0.3)    
              
            &:nth-child(4n-1)        
              border: 3px solid $orange
              background: rgba($orange, 0.1)
              &:hover
                background: rgba($orange, 0.3)                  
              
            &:nth-child(4n)        
              border: 3px solid $red
              background: rgba($red, 0.1)
              &:hover
                background: rgba($red, 0.3)    
            
             
            
            > img
              position:relative
              width:100%
              height:100%            

            > span          
              display: table
              font-size:16px
              height:100%
              &.dl
                font-size:15px
              
              > span
                display:table-cell
                vertical-align:middle
                width: 82px
            
            .badge
              width:40px
              height:40px
              padding-top:20px
            

            .long
              width:150px
              padding:20px
              height:40px
            
            
            .gulp
              padding-top:5px
              height:70px
            
            .node
              width:140px
              height:35px
              padding-left:28px
            
            .backbone
              width:150px
              height:30px
              padding-top:25px
            
            .glass
              padding-top:35px
              height:15px
              width:60px
            
            .less
              padding-top:25px
              height:30px
          
    
   