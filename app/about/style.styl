.about
  overflow:hidden
  > .bg-image
    background-image:url('../images/bg.jpg')
    background-size:100%
    background-repeat:repeat-y
    width:100%
    height:100%
    
  > .main  
    padding:100px 0 50px 0
    text-align:center
    font-family:$titleFont
    .name      
      color:white
      font-size:80px
        
    .desc
      color:rgba(white, 0.9)
      font-size: 60px

    @media all and (max-width:780px)      
      .name
        font-size: 60px
      .desc
        font-size: 45px
  
    @media all and (max-width:580px)      
      .name
        font-size: 46px
      .desc
        font-size: 32px
  
  > .about-me
    width:100%
    color:black
    background:white
        